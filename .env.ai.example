# Tools Portal with AI Integration - Environment Configuration Example
# Copy this file to .env and modify values as needed

# =============================================================================
# Flask Application Configuration
# =============================================================================

# Environment (development, production, testing)
FLASK_ENV=development

# Secret key for session management (CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production

# =============================================================================
# Symposium AI Backend Configuration
# =============================================================================

# URL to Symposium backend
# For local development (Symposium running locally):
SYMPOSIUM_BACKEND_URL=http://localhost:8000

# For Docker Compose deployment:
# SYMPOSIUM_BACKEND_URL=http://symposium-backend:8000

# For external Symposium instance:
# SYMPOSIUM_BACKEND_URL=https://your-symposium.example.com

# Authentication token for Symposium API
# Get this from your Symposium instance
SYMPOSIUM_AUTH_TOKEN=dev-token

# Request timeout for Symposium API calls (seconds)
SYMPOSIUM_REQUEST_TIMEOUT=30

# =============================================================================
# AI Chat Features Configuration
# =============================================================================

# Enable/disable AI chat functionality
AI_CHAT_ENABLED=true

# Maximum message length (characters)
AI_CHAT_MAX_MESSAGE_LENGTH=2000

# Maximum file upload size (bytes) - 10MB default
AI_CHAT_MAX_FILE_SIZE=10485760

# Allowed file types for upload (comma-separated)
AI_CHAT_ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.md,.json,.csv,.py,.js,.html,.css,.log

# Enable/disable specific AI features
ENABLE_FILE_UPLOAD=true
ENABLE_SAGE_SELECTION=true
ENABLE_MODEL_SELECTION=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log file location
LOG_FILE=logs/tools-portal.log

# Log rotation settings
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Security & Rate Limiting (Optional)
# =============================================================================

# Enable rate limiting (requires Redis)
RATELIMIT_ENABLED=false
RATELIMIT_DEFAULT=100 per hour

# Enable CORS for external access
CORS_ENABLED=false
CORS_ORIGINS=*

# =============================================================================
# Production Deployment Settings
# =============================================================================

# For production deployments, ensure you:
# 1. Set a strong SECRET_KEY
# 2. Use HTTPS endpoints for SYMPOSIUM_BACKEND_URL
# 3. Set appropriate rate limits
# 4. Configure proper logging levels
# 5. Secure the SYMPOSIUM_AUTH_TOKEN

# Example production settings:
# FLASK_ENV=production
# SECRET_KEY=your-very-secure-secret-key-here
# SYMPOSIUM_BACKEND_URL=https://symposium.yourdomain.com
# LOG_LEVEL=WARNING
# RATELIMIT_ENABLED=true

# =============================================================================
# Development & Testing
# =============================================================================

# For development without Symposium backend:
# AI_CHAT_ENABLED=true  # Will use demo mode
# SYMPOSIUM_BACKEND_URL=http://mock-backend:8000

# For testing:
# FLASK_ENV=testing
# AI_CHAT_ENABLED=false
# SYMPOSIUM_BACKEND_URL=http://mock-symposium:8000